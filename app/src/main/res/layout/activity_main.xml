<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.qthjen.aswitch.MainActivity">

    <Switch
        android:id="@+id/swtHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello "
        android:textSize="25sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/swtHello"
        android:id="@+id/ll1">

    </RelativeLayout>

    <CheckBox
        android:id="@+id/cbJava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Java "
        android:textSize="25sp"
        android:layout_below="@+id/ll1"/>

    <CheckBox
        android:text="Swift "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbSwift"
        android:textSize="25sp"
        android:layout_below="@+id/cbJava" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbKotlin"
        android:text="Kotlin "
        android:textSize="25sp"
        android:layout_below="@+id/cbSwift" />

    <Button
        android:id="@+id/btCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:textSize="25sp"
        android:layout_below="@+id/cbKotlin"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/btCheck"
        android:id="@+id/ll2">

    </RelativeLayout>

    <RadioGroup
        android:layout_below="@+id/ll2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:orientation="vertical">

        <RadioButton
            android:checked="true"
            android:id="@+id/rbJava"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Java"
            android:textSize="25sp"/>

        <RadioButton
            android:id="@+id/rbKotlin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kotlin"
            android:textSize="25sp"/>

        <RadioButton
            android:id="@+id/rbSwift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swift"
            android:textSize="25sp"/>

    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/radioGroup"
        android:id="@+id/ll3">

    </RelativeLayout>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll3"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progress="35"
        android:max="100"
        android:secondaryProgress="50"
        android:id="@+id/pb"/>

    <Button
        android:id="@+id/btDownloads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Downloads"
        android:textSize="25sp"
        android:layout_below="@+id/pb"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/btDownloads"
        android:id="@+id/ll4">

    </RelativeLayout>

    <SeekBar
        android:id="@+id/sb"
        android:layout_below="@+id/ll4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="30"
        android:secondaryProgress="50"/>


</RelativeLayout>
